{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "kleinweb/user-profile",
  "version": "1.0.0",
  "title": "User Profile",
  "keywords": ["social", "connect", "links", "author", "user", "profile"],
  "icon": "businessperson",
  "category": "kleinweb",
  "description": "Display user profile cards with social media links.",
  "usesContext": ["postId", "postType"],
  "supports": {
    "anchor": true,
    "html": false,
    "align": ["wide", "full"],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": false,
      "text": false,
      "link": false
    }
  },
  "attributes": {
    "selectedUserIds": {
      "type": "array",
      "default": [],
      "items": {
        "type": "number"
      }
    },
    "usePostAuthor": {
      "type": "boolean",
      "default": true
    },
    "linkToAuthorPage": {
      "type": ["boolean", "null"],
      "default": null
    }
  },
  "textdomain": "user-profile-block",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
