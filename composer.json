{
  "name": "kleinweb/user-profile-block",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "description": "The website source code for User Profile Block",
  "homepage": "https://github.com/kleinweb",
  "authors": [
    {
      "name": "Chris Montgomery",
      "email": "chrismont@temple.edu",
      "homepage": "https://github.com/montchr"
    },
    {
      "name": "Bella Pezzati",
      "email": "bella@temple.edu",
      "homepage": "https://github.com/bpizzle"
    }
  ],
  "support": {
    "issues": "https://github.com/kleinweb/user-profile-block/issues"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
      "type": "package",
      "package": {
        "name": "kinsta/kinsta-mu-plugins",
        "type": "wordpress-muplugin",
        "version": "3.1.1",
        "dist": {
          "url": "https://kinsta.com/kinsta-tools/kinsta-mu-plugins.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "php": "^8.3",
    "archtechx/enums": "^1.1",
    "kleinweb/lib": "~0.6.0",
    "php-di/php-di": "^7.0"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "codeception/codeception": "^5.0",
    "codeception/module-asserts": "^3.0",
    "codeception/module-db": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.59",
    "kleinweb/php-coding-standards": "^0.6.0",
    "lucatume/wp-browser": "^4.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^2.1.30",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpunit/phpunit": "^10.5",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "~8.0",
    "squizlabs/php_codesniffer": "^3.7.1",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Kleinweb\\UserProfile\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kleinweb\\UserProfile\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "alleyinteractive/composer-wordpress-autoloader": false,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "php-cs-fixer": "php-cs-fixer",
    "phpstan": "phpstan analyse --memory-limit 2G",
    "phpcbf": "phpcbf --extensions=php --standard=$PRJ_ROOT/.phpcs.xml.dist",
    "phpcs": "phpcs --extensions=php --standard=$PRJ_ROOT/.phpcs.xml.dist",
    "lint": ["@phpcs", "@phpstan"],
    "fix": ["@php-cs-fixer fix", "@phpcbf"],
    "check": ["@lint", "@test"],
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "codecept run wpunit",
    "test": ["@test:unit", "@test:integration"],
    "post-autoload-dump": ["Roots\\Acorn\\ComposerScripts::postAutoloadDump"]
  }
}
